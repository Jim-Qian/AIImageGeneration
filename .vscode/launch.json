// Flask in VS Code.
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "Backend/controller2.py",
        "FLASK_ENV": "development",
        "PYTHONPATH": "${workspaceFolder}/Backend"
      },
      "args": [
        "run",
        "--host=localhost"
      ],
      "jinja": true
    }
  ]
}
