// Only needed for debugging Next.js Server in VS Code. Not needed if running in command line.
{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Next.js: debug server",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "cwd": "${workspaceFolder}/Frontend",  // Tell VS Code debugger to go to Frontend (instead of the default root project folder), which contains package.json
        "port": 9229,  // The "port": 9229 in launch.json is not the port your app runs on (like 3000 or 5000) â€” it's the Node.js debugger port, which VS Code uses to connect to your app's debugging session. This is unrelated to your Flask or Next.js HTTP server ports.
        "console": "integratedTerminal",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }